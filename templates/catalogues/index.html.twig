{% include('_partials/picture_header.html.twig') %}
{# ----------------------------------------------------------------------------------------------------------------------- PICTURE HEADER END ---  #}

{# COMMENT #}
{# ----------------------------------------------------------------------------------------------------------------------- SECTION COMMENT ---  #}
{% include('_partials/comment.html.twig') %}
